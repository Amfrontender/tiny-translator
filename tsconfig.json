{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "baseUrl": "src",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2016",
      "dom"
    ],
    "baseUrl": "",
    "paths": {
      "@app/*": ["src/app/*"],
      "@ngx-i18nsupport": ["../ngx-i18nsupport/src/"],
      "@ngx-i18nsupport/*": ["../ngx-i18nsupport/src/*"]
    }
  }
}
